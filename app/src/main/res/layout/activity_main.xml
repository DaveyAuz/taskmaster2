<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#040A1E"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/addTasksButtonMainActivity"
        android:layout_width="202dp"
        android:layout_height="53dp"
        android:layout_marginTop="208dp"
        android:text="Add Tasks"
        android:textColorHighlight="#FFE600"
        android:textColorLink="#FF5900"
        app:layout_constraintEnd_toStartOf="@+id/allTasksButtonMainActivity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <Button
        android:id="@+id/allTasksButtonMainActivity"
        android:layout_width="202dp"
        android:layout_height="53dp"
        android:layout_marginTop="440dp"
        android:text="All Tasks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addTasksButtonMainActivity"
        app:layout_constraintTop_toTopOf="@+id/textViewTaskOneMainActivity" />

    <TextView
        android:layout_width="225dp"
        android:layout_height="22dp"
        android:background="#E2FB02"
        android:fontFamily="@font/oswald_medium"
        android:text="@string/task_sorting_application"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.132" />



    <TextView
        android:id="@+id/textViewUsernameMainActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHeaderMainActivity"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/textViewTaskOneMainActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewUsernameMainActivity" />

    <TextView
        android:id="@+id/textViewTaskTwoMainActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTaskOneMainActivity" />

    <TextView
        android:id="@+id/textViewTaskThreeMainActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTaskTwoMainActivity" />

    <TextView
        android:id="@+id/textViewHeaderMainActivity"
        android:layout_width="359dp"
        android:layout_height="66dp"
        android:layout_marginTop="16dp"
        android:background="#E2FB02"
        android:fontFamily="@font/oswald_medium"
        android:text="TASKMASTER"
        android:textColor="#000000"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="406dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="260dp"
        android:layout_height="251dp"
        android:elevation="-2dp"
        app:srcCompat="@android:drawable/alert_dark_frame"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="358dp" />

    <ImageButton
        android:id="@+id/imageButtonSettingsIconMainActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="168dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewTaskListMainActivity"
        app:layout_constraintVertical_bias="0.763"
        app:srcCompat="@android:drawable/ic_menu_manage" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="-3dp"
        app:srcCompat="@drawable/taskmasterbkgpng"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-166dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTaskListMainActivity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/addTasksButtonMainActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewUsernameMainActivity"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
