<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#040A1E"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/addTasksButtonMainActivity"
        android:layout_width="132dp"
        android:layout_height="45dp"
        android:layout_marginTop="288dp"
        android:text="Add Tasks"
        android:textColorHighlight="#FFE600"
        android:textColorLink="#FF5900"
        app:layout_constraintEnd_toStartOf="@+id/allTasksButtonMainActivity"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <Button
        android:id="@+id/allTasksButtonMainActivity"
        android:layout_width="128dp"
        android:layout_height="46dp"
        android:layout_marginTop="368dp"
        android:layout_marginEnd="44dp"
        android:text="All Tasks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewTaskOneMainActivity" />

    <TextView
        android:layout_width="225dp"
        android:layout_height="22dp"
        android:background="#E2FB02"
        android:fontFamily="@font/oswald_medium"
        android:text="@string/task_sorting_application"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.132" />



    <TextView
        android:id="@+id/textViewUsernameMainActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHeaderMainActivity"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/textViewTaskOneMainActivity"
        android:layout_width="238dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewUsernameMainActivity" />

